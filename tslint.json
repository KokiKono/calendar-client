{
    "extends": ["tslint-config-airbnb", "tslint-eslint-rules"],
    "rules": {
//        "ter-indent": 4,
//        "indent-size": [true, 4],
        "ter-indent": [
            true, 4,
            {
                "FunctionDeclaration": {
                    "parameters": 1,
                    "body": 1
                },
                "FunctionExpression": {
                    "parameters": 1,
                    "body": 1
                },
                "MemberExpression": 1,
                "SwitchCase": 1
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
    }
}